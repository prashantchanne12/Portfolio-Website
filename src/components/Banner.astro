---
import {Image} from "astro:assets"
import profileImage from "../assets/images/profile.jpeg";
---

<div class="mt-28">
    <div class="flex justify-between items-start">
      <div class="font-bold text-5xl">
        <div class="flex flex-col space-y-10">
          <div>
            <Image src={profileImage} alt="Profile Image" class="rounded-full h-12 w-12">
          </div>
          <div>
            <p>Hello! I'm Prashant</p>
            <p class="py-2">Channe.</p>
          </div>
        </div>
      </div>

      <div class="ml-20 flex flex-col space-y-3">
        <div>
          <p class="font-medium text-3xl max-w-lg">A Full Stack Developer with</p>
          <p class="font-medium text-3xl max-w-lg">2 years of experience.</p>
        </div>
        <p class="text-lg py-2  text-gray-600">Developing apps and websites to solve real-world problems.</p>
        <div class="flex space-x-4 py-2">
          <button id="showResumeBtn" class="bg-gray-950 font-medium text-white py-3 px-5 rounded-sm inline-block self-start  border-gray-900 ">See my Resume</button>
          <a href="https://github.com/prashantchanne12">
            <button class="bg-white font-medium text-black py-3 px-5 rounded-sm inline-block self-start border border-gray-900 ">See my Projects</button>
          </a>
        </div>
      </div>
    </div>

    <div class="bg-[#F5F5F0]">

    </div>
</div>

<script>
  const showResumeBtn = document.getElementById('showResumeBtn');
  if (showResumeBtn){
    showResumeBtn.addEventListener('click', () => {
      window.open('/resume.pdf', '_blank');
    });
  }
</script>